@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Cookies</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ownerdashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LayoutOwner.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <partial name="Sidebar" />
    <div class="dashboard-wrapper">
        <div class="main-content">
            <h2 class="title">Dashboard</h2>

            <div class="cards">
                <!-- KARTU: Total Pemakaian Produk -->
                <div class="card-section">
                    <div class="card new-card">
                        <p class="card-title">Total Pemakaian Produk</p>
                        <small class="card-subtitle">Total Pemakaian Bulan Ini</small>
                        <p class="card-value">6</p>
                        <form asp-controller="Owner" asp-action="GrafikPemakaianProduk" method="get" style="display:inline;">
                            <button type="submit" class="lihat-grafik">
                                <i class="fas fa-chart-line"></i> Lihat Grafik Pemakaian
                            </button>
                        </form>
                    </div>
                </div>

                <!-- KARTU: Total Pembelian -->
                <div class="card-section">
                    <div class="card new-card">
                        <p class="card-title">Total Pembelian</p>
                        <small class="card-subtitle">Total Pembelian Bulan Ini (Rp)</small>
                        <p class="card-value">123.050.000</p>
                        <form asp-controller="Owner" asp-action="GrafikPengeluaranProduk" method="get" style="display:inline;">
                            <button type="submit" class="lihat-grafik">
                                <i class="fas fa-chart-line"></i> Lihat Grafik Total
                            </button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="table-only-section">
                <h3>Pelacakan Produk</h3>
                <div class="table-wrapper">
                    <table class="status-table">
                        <thead>
                            <tr>
                                <th>Kode Produk</th>
                                <th>Nama Produk</th>
                                <th>Stok</th>
                                <th>Tanggal Masuk</th>
                                <th>Tanggal Expired</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var produk in ViewBag.DataProduk)
                            {
                                <tr>
                                    <td>@produk.KodeProduk</td>
                                    <td>@produk.Nama</td>
                                    <td>@produk.Stok</td>
                                    <td>@produk.TanggalMasuk.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))</td>
                                    <td>@produk.TanggalExpired.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
