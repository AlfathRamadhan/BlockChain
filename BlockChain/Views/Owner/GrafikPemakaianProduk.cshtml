@{
    ViewData["Title"] = "Grafik Pemakaian Produk";
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>Owner - Dashboard Grafik Pemakaian</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Grafik.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LayoutOwner.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <partial name="Sidebar" />

    <div class="dashboard-wrapper">
        <div class="main-content">
            <h2 class="title" style="color: white; font-weight: bold; text-align: center;">Total Pemakaian Produk</h2>
            <p style="text-align: center; color: white;">Total Pemakaian Bulan Ini</p>

            <div class="grafik-container">

                <div class="selector-container">
                    <div class="tahun-selector">
                        <button id="prevTahun">←</button>
                        <span id="tahunTampil" class="highlight-brown">2025</span>
                        <button id="nextTahun">→</button>
                    </div>

                    <div class="bulan-selector" id="bulanSelector">
                        <button id="prevBulan">←</button>
                        <span id="bulanTampil" data-bulan-index="3" class="highlight-brown" >April</span>
                        <button id="nextBulan">→</button>
                    </div>
                </div>

                <div class="chart-wrapper">
                    <canvas id="chartPemakaian" height="150"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/grafikproduk.js"></script>

</body>
</html>
