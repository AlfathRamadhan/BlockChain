@model List<BlockChain.Models.Produk>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Gudang - Cookies</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebargudang.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/gudangdashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

</head>
<body>
    <partial name="_SidebarGudang" />
    <div class="dashboard-wrapper">
        <div class="main-content">
            <h2 class="title">Dashboard Gudang</h2>

            <div class="card-section">
                <h3>Statistik Produk</h3>
                <div class="card user-stats">
                    <div class="stats-row">
                        <div class="stat-box">
                            <div class="icon-box"><i class="fas fa-box"></i></div>
                            <div>Produk Masuk</div>
                            <span>@ViewBag.ProdukMasuk</span>
                        </div>
                        <div class="stat-box">
                            <div class="icon-box"><i class="fas fa-truck"></i></div>
                            <div>Produk Keluar</div>
                            <span>@ViewBag.ProdukKeluar</span>
                        </div>
                        <div class="stat-box">
                            <div class="icon-box"><i class="fas fa-boxes-stacked"></i></div>
                            <div>Total Stok</div>
                            <span>@ViewBag.TotalStok</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-only-section">
                <h3>Daftar Produk Gudang</h3>
                <div class="table-wrapper">
                    <table class="status-table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Kode Produk</th>
                                <th>Nama Produk</th>
                                <th>Stok</th>
                                <th>Tanggal Masuk</th>
                                <th>Tanggal Keluar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var produk = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@produk.KodeProduk</td>
                                    <td>@produk.Nama</td>
                                    <td>@produk.Stok</td>
                                    <td>@produk.TanggalMasuk.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))</td>
                                    <td>@produk.TanggalExpired.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("id-ID"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
